/* pages/detail-search/detail-search.wxss */
page{
  padding: 0 20rpx;
  /* padding-top: 56px; */
  background-color: #fafafa;
  box-sizing: border-box;
}

/* 热门搜索 */
.hot{
  padding: 10rpx;
}

.hot .list{
  display: flex;
  flex-wrap: wrap;
  font-size: 11px;
}

.hot .list .tag{
  padding: 10rpx 12rpx;
  margin:  20rpx 20rpx 0 0;
  background-color: #fff ;
  border-radius: 16rpx;
}

.hot .list .tag:first-of-type{
  color: #26ce8a;
}

/* 建议歌曲 */
.suggest {
  padding: 10rpx;
}

.suggest .title {
  color: #26ce8a;
  font-size: 34rpx;
  font-weight: 700;
}

.suggest .list .item {
  display: flex;
  align-items: center;
  margin: 16rpx 0 0;
}

.suggest .list .icon {
  width: 66rpx;
  margin-left: -20rpx;
}

.suggest .item .text {
  font-size: 28rpx;
}